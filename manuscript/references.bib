@article{li_mapping_2019,
	title = {Mapping {Photosynthesis} {Solely} from {Solar}-{Induced} {Chlorophyll} {Fluorescence}: {A} {Global}, {Fine}-{Resolution} {Dataset} of {Gross} {Primary} {Production} {Derived} from {OCO}-2},
