@article{chazdon_carbon_2016,
  title = {Carbon Sequestration Potential of Second-Growth Forest Regeneration in the {{Latin American}} Tropics},
  author = {Chazdon, Robin L. and Broadbent, Eben N. and Rozendaal, Dana{\"e} M. A. and Bongers, Frans and Zambrano, Ang{\'e}lica Mar{\'i}a Almeyda and Aide, T. Mitchell and Balvanera, Patricia and Becknell, Justin M. and Boukili, Vanessa and Brancalion, Pedro H. S. and Craven, Dylan and {Almeida-Cortez}, Jarcilene S. and Cabral, George A. L. and de Jong, Ben and Denslow, Julie S. and Dent, Daisy H. and DeWalt, Saara J. and Dupuy, Juan M. and Dur{\'a}n, Sandra M. and {Esp{\'i}rito-Santo}, Mario M. and Fandino, Mar{\'i}a C. and C{\'e}sar, Ricardo G. and Hall, Jefferson S. and {Hern{\'a}ndez-Stefanoni}, Jos{\'e} Luis and Jakovac, Catarina C. and Junqueira, Andr{\'e} B. and Kennard, Deborah and Letcher, Susan G. and Lohbeck, Madelon and {Mart{\'i}nez-Ramos}, Miguel and Massoca, Paulo and Meave, Jorge A. and Mesquita, Rita and Mora, Francisco and Mu{\~n}oz, Rodrigo and Muscarella, Robert and Nunes, Yule R. F. and {Ochoa-Gaona}, Susana and {Orihuela-Belmonte}, Edith and {Pe{\~n}a-Claros}, Marielos and {P{\'e}rez-Garc{\'i}a}, Eduardo A. and Piotto, Daniel and Powers, Jennifer S. and {Rodr{\'i}guez-Velazquez}, Jorge and {Romero-P{\'e}rez}, Isabel Eunice and Ru{\'i}z, Jorge and Saldarriaga, Juan G. and {Sanchez-Azofeifa}, Arturo and Schwartz, Naomi B. and Steininger, Marc K. and Swenson, Nathan G. and Uriarte, Maria and van Breugel, Michiel and van der Wal, Hans and Veloso, Maria D. M. and Vester, Hans and Vieira, Ima Celia G. and Bentos, Tony Vizcarra and Williamson, G. Bruce and Poorter, Lourens},
