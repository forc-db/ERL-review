	pages = {109328},
	file = {ScienceDirect Full Text PDF:/Users/kteixeira/Zotero/storage/KK95UKWL/Ribeiro-Kumara et al. - 2020 - How do forest fires affect soil greenhouse gas emi.pdf:application/pdf;ScienceDirect Snapshot:/Users/kteixeira/Zotero/storage/EXH7N54M/S0013935120302218.html:text/html}
}

