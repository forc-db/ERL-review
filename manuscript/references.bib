  file = {/Users/kteixeira/Zotero/storage/8KZD35QV/Vargas et al. - 2008 - Biomass and carbon accumulation in a fire chronose.pdf;/Users/kteixeira/Zotero/storage/AAARHII5/j.1365-2486.2007.01462.html},
