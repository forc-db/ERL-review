  file = {/Users/kteixeira/Zotero/storage/T79TSX35/McDowell et al. - 2020 - Pervasive shifts in forest dynamics in a changing .pdf;/Users/kteixeira/Zotero/storage/ZLLFAW4N/eaaz9463.html},
  journal = {Science},
