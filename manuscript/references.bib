  copyright = {Published 2013. This article is a U.S. Government work and is in the public domain in the USA.},
  file = {/Users/kteixeira/Zotero/storage/L87RSIYT/Anderson‐Teixeira et al. - 2013 - Altered dynamics of forest recovery under a changi.pdf;/Users/kteixeira/Zotero/storage/NQNGUS58/gcb.html},
