  file = {/Users/kteixeira/Zotero/storage/GWXQXIXW/Stegen et al. - 2011 - Variation in above-ground forest biomass across br.pdf;/Users/kteixeira/Zotero/storage/XZ652WJ3/j.1466-8238.2010.00645.html},
